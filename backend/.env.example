# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# REQUIRED: JWT Secrets (generate secure random strings)
# Example generation: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-key-different-from-jwt-secret

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=people_tracking_db

# CORS Configuration (comma-separated list of allowed origins)
# Development example:
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# Production example:
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Email Configuration (optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# SMS Configuration (optional - for SMS notifications)
# SMS_API_KEY=your-twilio-api-key
# SMS_API_SECRET=your-twilio-api-secret
# SMS_FROM_NUMBER=+1234567890

# Network Configuration (optional)
# HAMACHI_IP=25.10.65.46

# Logging
LOG_LEVEL=info
